
<div>
<h2>Este es el perfil de usuario</h2>
  <div id="profile">
    <div>
        {{!user.imagen}}
        {{!user.name}}
    </div>
    <div>
       <a href="./comentarios/"><button> Comentarios</button></a> 
       <a href="perfil/crear-receta"><button> Crea tu propia receta</button></a> 
    </div>
  </div>  
  <div id="recetas-profile">
      {{#each recetas}}
        <div>
          <a href="/recetario/{{this._id}}/detalles">{{this.nombre}}</a>
             <img src="{{this.imagen}}" alt="PATATA" >
                <div>
                    <a href="/perfil/{{this._id}}/actualizartodo">
                    <button>Actualizar</button>
                    </a>
                    
                     <a href="/perfil/{{this._id}}/delete">
                    <button>Eliminar</button>
                     </a> 
                </div>
        </div>
      {{/each}}
  </div>
</div>

